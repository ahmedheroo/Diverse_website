@model Diverse_website.ViewModels.VendorsWithImagesVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .image-input-placeholder {
        background-image:Url('@Url.Content(Model.vendor.PhotoUrl)');
    }

    [data-bs-theme="dark"] .image-input-placeholder {
        background-image:Url('@Url.Content(Model.vendor.PhotoUrl)');
    }
</style>
<div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">



        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                The Vendors
            </h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a asp-action="Index" class="text-muted text-hover-primary">
                        Home
                    </a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    Edit Vendor
                </li>
                <!--end::Item-->

            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->

    </div>
    <!--end::Toolbar container-->
</div>
<div id="kt_app_content" class="app-content  flex-column-fluid ">


    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container  container-xxl ">

        <div class="card">
            <!--begin::Body-->
            <div class="card-body p-lg-10">
                <!--begin::Latest posts-->
                <form class="form-horizontal" enctype="multipart/form-data" asp-controller="Vendor" method="post" asp-action="Edit">

                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="vendor.TitleEn" class="required fs-6 fw-semibold mb-2">Title English</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="vendor.TitleEn" type="text" class="form-control form-control-solid" placeholder="Title English" />

                        <span asp-validation-for="vendor.TitleEn" class="text-danger"></span>
                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="vendor.TitleAr" class="required fs-6 fw-semibold mb-2">Title Arabic</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="vendor.TitleAr" type="text" class="form-control form-control-solid" placeholder="Title Arabic" />

                        <span asp-validation-for="vendor.TitleAr" class="text-danger"></span>
                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="vendor.DescEn" class="required fs-6 fw-semibold mb-2">Content English</label>
                        <!--end::Label-->
                        <!--begin::Input-->




                        <textarea asp-for="vendor.DescEn" id="Desc1" class="form-control form-control-solid" placeholder="Description English">

</textarea>
                        <span class="text-dark">words count:<label id="WordsCounter">0</label>  </span>

                        <span asp-validation-for="vendor.DescEn" class="text-danger"></span>

                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="vendor.DescAr" class="required fs-6 fw-semibold mb-2">Content Arabic</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <textarea asp-for="vendor.DescAr" id="Desc2" class="form-control form-control-solid" placeholder="Description Arabic">

</textarea>
                        <span class="text-dark">words count:<label id="WordsCounterar">0</label>  </span>

                        <span asp-validation-for="vendor.DescAr" class="text-danger"></span>

                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="vendor.VendorUrl" class="required fs-6 fw-semibold mb-2">Vendor URL</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="vendor.VendorUrl" type="url" class="form-control form-control-solid" placeholder="Vendor URL" />

                        <span asp-validation-for="vendor.VendorUrl" class="text-danger"></span>
                        <!--end::Input-->
                    </div>
                    <input type="hidden" asp-for="vendor.Id" />
                    <!--begin::Image input-->
                    <div class="fv-row mb-7">
                        <div class="image-input image-input-empty" data-kt-image-input="true">
                            <!--begin::Image preview wrapper-->
                            <div class="image-input-wrapper h-125px" style="width:18rem !important;background-image:Url('@Url.Content(Model.vendor.PhotoUrl)')"></div>
                            <!--end::Image preview wrapper-->
                            <!--begin::Edit button-->
                            <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                   data-kt-image-input-action="change"
                                   data-bs-toggle="tooltip"
                                   data-bs-dismiss="click"
                                   title="Change banner">
                                <i class="ki-duotone ki-pencil fs-6"><span class="path1"></span><span class="path2"></span></i>

                                <!--begin::Inputs-->
                                <input asp-for="VendorImage" type="file" accept=".png, .jpg, .jpeg" />
                                <input type="hidden" name="avatar_remove" />
                                <!--end::Inputs-->
                            </label>
                            <!--end::Edit button-->
                            <!--begin::Cancel button-->
                            <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                  data-kt-image-input-action="cancel"
                                  data-bs-toggle="tooltip"
                                  data-bs-dismiss="click"
                                  title="Cancel banner">
                                <i class="ki-outline ki-cross fs-3"></i>
                            </span>
                            <!--end::Cancel button-->
                            <!--begin::Remove button-->
                            <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                                  data-kt-image-input-action="remove"
                                  data-bs-toggle="tooltip"
                                  data-bs-dismiss="click"
                                  title="Remove avatar">
                                <i class="ki-outline ki-cross fs-3"></i>
                            </span>
                            <!--end::Remove button-->
                        </div>
                    </div>
                    <div class="fv-row mb-7">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SelectedCountryId">Location</label>
                                @* @Html.DropDownListFor(x => Model.SelectedCountryId, new SelectList(Model.CountryList, "Id", "CountryName"), htmlAttributes: new { @class = "form-control", id = "SelectedCountryId" })*@
                                @Html.DropDownListFor(x => Model.vendor.CountryId, new SelectList(Model.CountryList, "Id", "CountryName"), htmlAttributes: new { @class = "form-control", id = "SelectedCountryId" })

                                <span asp-validation-for="SelectedCountryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="fv-row mb-3">
                            <button type="submit" class="btn btn-sm btn-primary" style="float:right">Save</button>
                            <a class="btn btn-sm btn-secondary" asp-action="Index">Back</a>
                        </div>
                    </div>


                </form>



            </div>
            <!--end::Body-->
        </div>
    </div>
</div>

<!--CKEditor Build Bundles:: Only include the relevant bundles accordingly-->
@section Scripts{

    <script>
        $('#Desc1').keyup(function (e) {
            if (e.keyCode == 32) {
                $(this).trigger("enterKey");
            }
        });
        $('#Desc1').on("enterKey", function (e) {
            var words = $('#Desc1').val().split(' ');
            $("#WordsCounter").text(words.length - 1);
            //$("#Desc1").text();
        });

        $('#Desc2').keyup(function (e) {
            if (e.keyCode == 32) {
                $(this).trigger("enterKey");
            }
        });
        $('#Desc2').on("enterKey", function (e) {
            var words = $('#Desc2').val().split(' ');
            $("#WordsCounterar").text(words.length - 1);
            //$("#Desc1").text();
        });
    </script>
}