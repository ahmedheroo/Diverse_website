@model User_RoleVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">



    <!--begin::Page title-->
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
        <!--begin::Title-->
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
            System Users
        </h1>
        <!--end::Title-->
        <!--begin::Breadcrumb-->
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a asp-action="Index" class="text-muted text-hover-primary">
                    Home
                </a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-400 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                Edit User
            </li>
            <!--end::Item-->

        </ul>
        <!--end::Breadcrumb-->
    </div>
    <!--end::Page title-->

</div>

<div id="kt_app_content" class="app-content  flex-column-fluid ">


    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container  container-xxl ">

        <div class="card">
            <!--begin::Body-->
            <div class="card-body p-lg-10">
                <!--begin::Latest posts-->
                <form class="form-horizontal needs-validation" enctype="multipart/form-data" asp-controller="User" method="post" asp-action="Edit" novalidate>

                    <div class="fv-row mb-7">
                        <input asp-for="User.Id" type="hidden" />
                        <!--begin::Label-->
                        <label asp-for="User.UserName" class="required fs-6 fw-semibold mb-2">User Name</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="User.UserName" type="text" class="form-control form-control-solid" placeholder="User Name" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>

                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="User.Email" class="required fs-6 fw-semibold mb-2">user's Email'</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="User.Email" type="email" readonly class="form-control form-control-solid" placeholder="User's Email" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>

                        <!--end::Input-->
                    </div>
                    <div class="fv-row mb-7">
                        <!--begin::Label-->
                        <label asp-for="User.PasswordHash" class="required fs-6 fw-semibold mb-2">user's Password</label>
                        <!--end::Label-->
                        <!--begin::Input-->
                        <input asp-for="User.PasswordHash" type="password" class="form-control form-control-solid" placeholder="User's Password" />
                        <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
                        <!--end::Input-->
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SelectedRoleId">Role</label>
                                @Html.DropDownListFor(x => Model.SelectedRoleId, new SelectList(Model.RoleList, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "SelectedRoleId" })
                                <span asp-validation-for="SelectedRoleId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="card-footer">
                        <div class="fv-row mb-7">
                            <button type="submit" class="btn btn-sm btn-primary" style="float:right">Save</button>
                            <a class="btn btn-sm btn-secondary" asp-action="Index">Back</a>
                        </div>
                    </div>


                </form>



            </div>
            <!--end::Body-->
        </div>
    </div>
</div>
